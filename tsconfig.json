{
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "inlineSourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "Node",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@atoms/*": [
        "src/components/_atoms/*"
      ],
      "@molecules/*": [
        "src/components/_molecules/*"
      ],
      "@organisms/*": [
        "src/components/_organisms/*"
      ],
      "@core/*": [
        "src/components/_core/*"
      ],
      "@templates/*": [
        "src/components/_templates/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@common/*": [
        "src/shared/*"
      ],
      "@typings/*": [
        "src/types/*"
      ],
      "test-utils": [
        "src/utils/tests"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "next.config.js",
    "postcss.config.js",
    ".next",
    "src/**/__mocks__/*"
  ]
}
